<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="EASY PARKING"
        android:textColor="#08497C"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mEdtName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mEdtName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="33dp"
        android:drawableLeft="@drawable/name"
        android:drawablePadding="10sp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingLeft="10sp"
        app:layout_constraintBottom_toTopOf="@+id/mEdtRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/mEdtRegister"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="23dp"
        android:drawableLeft="@drawable/car"
        android:drawablePadding="10sp"
        android:ems="10"
        android:hint="Number Plate"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/mEdtphoneNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEdtName" />

    <EditText
        android:id="@+id/mEdtphoneNumber"
        android:layout_width="322dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="18dp"
        android:drawableLeft="@drawable/call"
        android:drawablePadding="10sp"
        android:ems="10"
        android:hint="phone Number"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/location"
        app:layout_constraintStart_toStartOf="@+id/location"
        app:layout_constraintTop_toBottomOf="@+id/mEdtRegister" />

    <EditText
        android:id="@+id/location"
        android:layout_width="258dp"
        android:layout_height="0dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="26dp"
        android:drawableLeft="@drawable/location"
        android:drawablePadding="10sp"
        android:ems="10"
        android:hint="location"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/mEdtidNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEdtphoneNumber" />

    <EditText
        android:id="@+id/mEdtidNumber"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="48dp"
        android:drawableLeft="@drawable/id"
        android:drawablePadding="10sp"
        android:ems="10"
        android:hint="idNumber"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/mBtnPay"
        app:layout_constraintStart_toStartOf="@+id/location"
        app:layout_constraintTop_toBottomOf="@+id/location" />

    <Button
        android:id="@+id/mBtnPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="74dp"
        android:text="Pay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEdtidNumber" />



</androidx.constraintlayout.widget.ConstraintLayout>